{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "name": "influxGrafana"
	},
	"name": "infludb-grafana",
	"namespace": "kube-system"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "name": "influxGrafana"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "name": "influxGrafana"
		}
	    },
	    "spec": {
		"containers": [
		    {
			"image": "kubernetes/heapster_influxdb:v0.3",
			"name": "influxdb",
			"ports": [
			    {
				"containerPort": 8083,
				"hostPort": 8083
			    },
			    {
				"containerPort": 8086,
				"hostPort": 8086
			    }
			]
		    },
		    {
			"image": "grafana/grafana:2.1.0",
			"name": "grafana"
		    }
		]
	    }          
	}
    }
}

