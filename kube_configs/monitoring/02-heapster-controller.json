{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "k8s-app" : "heapster",
	    "name": "heapster",
	    "version": "v6"
	},
	"name": "heapster"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "k8s-app": "heapster",
	    "version": "v6"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "k8s-app": "heapster",
		    "version": "v6"
		}
	    },
	    "spec": {
		"containers": [
		    {
			"image": "kubernetes/heapster:v0.17.0",
			"name": "heapster",
			"command": [
			    "/bin/sh",
			    "-c",
			    "/heapster --source=kubernetes --sink=influxdb:http://$MONITORING_INFLUXDB_SERVICE_HOST:$MONITORING_INFLUXDB_SERVICE_PORT_API"
			]
		    }
		]
	    }
	}
    }
}

